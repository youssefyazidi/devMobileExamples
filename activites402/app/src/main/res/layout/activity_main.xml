<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff51b46d"
    android:padding="15dp"
    android:id="@+id/relativelayout"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Savez-vous?"
        android:textSize="24sp"
        android:textColor="#80ffffff"
         />

    <TextView
        android:id="@+id/dactTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fourmis entendent quand ils se reveillent le matin."
        android:textSize="24sp"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white"
        />

    <Button
        android:id="@+id/showFactButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Montrer autre fait amusant"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@android:color/white"
        android:textColor="#ff51b46d"
        ></Button>

</RelativeLayout>